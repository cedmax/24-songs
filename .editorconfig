# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
indent_size = 2

# 4 space indentation
[*.json]
indent_size = 4

# 4 space indentation
[package.json]
indent_size = 2
